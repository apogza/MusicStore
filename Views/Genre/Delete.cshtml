@model MusicStore.Models.Genre
@{
    ViewData["Title"] = "Delete Genre";
}

<form asp-action="Delete">
    <h3>Are you sure you want to delete the genre <i>@Model.Label</i>?</h3>
    <input type="hidden" asp-for="ID" /><br />
    <input type="submit" value="Yes" class="btn btn-danger" /> <a asp-action="Index" class="btn btn-success">No</a>
</form>
