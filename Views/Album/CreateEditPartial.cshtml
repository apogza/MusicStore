@model MusicStore.Models.Album

    <div class="form-group">
        <input type="hidden" asp-for="ID" />
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="YearRelease" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="YearRelease" class="form-control" />
            <span asp-validation-for="YearRelease" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.GenreID, (SelectList)ViewBag.ListGenres, new {@class="form-control"})
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Artist" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ArtistID, (SelectList)ViewBag.ListArtists, new {@class="form-control"})
            <span asp-validation-for="Artist" class="text-danger"></span>
            <div style="clear: both; display:none"></div>        
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
    
