@model MusicStore.Models.Album

@{
    ViewData["Title"] = "Create / Edit Album";
    ViewBag.ListGenres = new SelectList(ViewBag.ListGenres, "ID", "Label");
    ViewBag.ListArtists = new SelectList(ViewBag.ListArtists, "ID", "Name");

}

<form asp-action="CreateEdit">
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.ID)
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="YearRelease" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="YearRelease" class="form-control" />
            <span asp-validation-for="YearRelease" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.GenreID, (SelectList)ViewBag.ListGenres)
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Artist" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.ArtistID, (SelectList)ViewBag.ListArtists)
            <span asp-validation-for="Artist" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>