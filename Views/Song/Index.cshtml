@model IEnumerable<MusicStore.Models.Song>

@{ 
    ViewData["Title"] = "Music Store - View Songs";
    ViewData["Header"] = "Songs";
}

<h3>
    @ViewData["Header"]
    <a asp-action="CreateEdit" class="btn btn-success">Create New</a>
</h3>


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Song song in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => song.Name)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@song.ID" class="btn btn-success" >View</a> 
                    <a asp-action="CreateEdit" asp-route-id="@song.ID" class="btn btn-success">Edit</a> 
                    <a asp-action="Delete" asp-route-id="@song.ID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>