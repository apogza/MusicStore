@model MusicStore.Models.Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<form asp-action="Delete">
    <h3>Are you sure you want to delete the artist <i>@Model.Name</i>?</h3>
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Yes" class="btn btn-danger" /> <a asp-action="Index" class="btn btn-success">No</a>
</form>