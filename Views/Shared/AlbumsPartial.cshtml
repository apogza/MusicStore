@model IEnumerable<MusicStore.Models.Album>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.YearRelease)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Album album in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => album.Name)</td>
                <td>@Html.DisplayFor(model => album.YearRelease)</td>
                <td>
                    <a asp-action="Details" asp-controller="Album" asp-route-id="@album.ID" class="btn btn-success">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>